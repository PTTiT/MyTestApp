<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.ttp.example.pycotestapp.MainActivity" >

    <fragment
        android:id="@+id/entries_container"
        android:name="com.ttp.example.pycotestapp.fragment.EntriesFragment"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <fragment
        android:id="@+id/detail_container"
        android:name="com.ttp.example.pycotestapp.fragment.DetailFragment"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>